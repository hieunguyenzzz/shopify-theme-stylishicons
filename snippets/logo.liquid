<div id="logo" class="span-4 desktop-2 tablet-3 {{ logo_width }} {{ section.settings.logo_position }}">
{% if section.settings.logo != blank %}
{%- assign image_size = '400x' -%}
<div class="first_logo">
<a href="{{ routes.root_url }}">
  <img src="{{ section.settings.logo | img_url: image_size }}" itemprop="logo">
</a>
</div>
  {% if section.settings.logo_alt != blank %}
  {%- assign image_size = '400x' -%}
  <div class="second_logo">
  <a href="{{ routes.root_url }}">
    <img src="{{ section.settings.logo_alt | img_url: image_size }}" itemprop="logo">
  </a>
  </div>
  {% endif %}
{% else %}
  <a style="font-size:{{ section.settings.logosize }}px;" href="{{ routes.root_url }}">{{ section.settings.logoname }}</a>
{% endif %}
</div>
