<section class="featured__collection--{{ section.id }} homepage-products" data-section-id="{{ section.id }}" data-section-type="carousel-section" data-aos="{{ settings.scroll_animation }}">
    {% if section.settings.full_width %}
        <div class="gridlock-fluid">
            <div class="row">
            {% endif %}
            {%- assign collection = collections[section.settings.collection] -%}
            {% if section.settings.heading != blank %}
                <div class="section-title row">
                    <h1>
                        {{ section.settings.heading | escape }}
                    </h1>
                    <p>{{ section.settings.subheading | escape }}</p>
                </div>
                <div class="clear"></div>
            {% endif %}
            {% if section.settings.carousel %}
                {%- assign is_carousel = true -%}
            {%- endif -%}
            {%- assign prod_limit = section.settings.limit -%}
            {%- assign grid = section.settings.grid -%}
            {% capture slideshow_config %}{
                      "wrapAround":true,
                      "cellAlign": "left",
                      "dragThreshold":"15","contain": true,
                      "pauseAutoPlayOnHover":false,
                      "prevNextButtons":true,
                      "pageDots": false
                    }
            {% endcapture %}
            <div class="featured__collection{% if is_carousel %}-carousel flickity__section js-carousel{% endif %} product-loop row" {% if is_carousel %} data-flickity='{{ slideshow_config }}' {% endif %}>


                {% for block in section.blocks %}
                    <div class="featured__collection-product product-index" id="product-listing-{{ product.id }}" data-product-id="{{ product.id }}" data-alpha="{{ product.title }}" data-price="{{ product.price }}">

                        <blockquote class="tw-space-y-6 tw-p-6 lg:tw-p-8 lg:tw-border " >
                            {% if block.settings.image %}
                              <span class="tw-block tw-w-12 tw-h-12 tw-rounded-full tw-overflow-hidden tw-relative">
                                <img class="tw-absolute tw-inset-0 tw-w-full tw-h-full tw-object-cover lazyloaded" src="{{ block.settings.image | img_url: '200x' }}">
                              </span>
                            {% endif %}
                            <h5 class="tw-text-lg text-[#ff6f61] tw-p-0">
                              {{ block.settings.title1 }}
                            </h5>
                            {% if block.settings.quote != blank %}
                                <div class="rte-setting rte tw-p-0">{{ block.settings.quote }}</div>
                            {% endif %}
                            {% if block.settings.author != blank %}
                                <cite>{{ block.settings.author | escape }}</cite>
                            {% endif %}
                        </blockquote>
                    </div>
                {% endfor %}

            </div>
            {% if section.settings.full_width %}
            </div>
        </div>
    {% endif %}
    {% case section.settings.grid %}
        {% when 2 %}
            {%- assign prod_grid = 50 -%}
        {% when 3 %}
            {%- assign prod_grid = 33.333 -%}
        {% when 4 %}
            {%- assign prod_grid = 25 -%}
        {% when 5 %}
            {%- assign prod_grid = 20 -%}
    {% endcase %}
    <style>
    section.featured__collection--{{ section.id }} {
      background: {{ section.settings.background_color }};
    }
    {% if settings.section_titles != 'text_only' %}
    section.featured__collection--{{ section.id }} .section-title h2 {
      border-color: {{ section.settings.heading_color }} !important;
    }
    {% endif %}
    section.featured__collection--{{ section.id }} .section-title h2,
    section.featured__collection--{{ section.id }} .section-title h2 a {
      color: {{ section.settings.heading_color }} !important;
    }
    section.featured__collection--{{ section.id }} .product-index a {
      display: block;
    }
    section.featured__collection--{{ section.id }} .product-index a:focus {
      outline-offset: unset !important;
    }
    {% if is_carousel %}
    section.featured__collection--{{ section.id }} .featured__collection-carousel .featured__collection-product {
      width: {{ prod_grid }}%;
    }
    {% else %}
    section.featured__collection--{{ section.id }} .featured__collection {
      display: grid;
      grid-template-columns: repeat({{ grid }}, {{ prod_grid }}%);
    }
  {% endif %}
  </style>
    
    <div class="h-ftr text-center">
        <a class="text-link" href="/pages/reviews" title="See all reviews">All reviews
            <i class="icon icon-chevron-right"></i>
        </a>
    </div>
</section>
<div class="clear"></div>


