{% capture cssvariable %}
    --section-bg:{{section.settings.bgColor}}
{% endcapture %}
{% capture items %}
    <div class="keen-slider__slide">1</div>
    <div class="keen-slider__slide">2</div>
    <div class="keen-slider__slide">3</div>
    <div class="keen-slider__slide">4</div>
    <div class="keen-slider__slide">5</div>
    <div class="keen-slider__slide">6</div>
{% endcapture %}


<div style="{{cssvariable}}" id="{{section.id}}" class="tw-py-16 tw-bg-[color:var(--section-bg)] tw-items-center">
    <div class="tw-max-w-[980px] xl:tw-max-w-7xl tw-px-8 tw-mx-auto flex tw-flex-col tw-gap-8 lg:tw-grid-cols-2">
        <div class="tw-text-center lg:tw-text-left tw-flex-1  tw-space-y-8">
            <h2 class="tw-text-3xl tw-font-bold">
                {{section.settings.heading}}
            </h2>
            <div class="tw-max-w-prose">
                {{section.settings.description}}
            </div>
        </div>
        {% include '[carousel]' items:items %}
    </div>
</div>

{% schema %}

{
    "name": "Instagram",
    "settings": [
        {
            "type": "color",
            "id": "bgColor",
            "label": "Background Color",
            "default": "#ffffff"
        }, {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        }, {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Shop Instagram"
        }, {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Less than humble about your abode? Mention @interior_icons in your photos and we'll feature the best pics on our site.</p>"
        }
    ],
    "blocks": [
      {
        "type":"item",
        "name":"Feed Item",
        "settings":[
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
              "type": "url",
              "id": "url",
              "label": "Url",
              "default": "/"
          }
        ]
      }
    ],
    "presets": [
        {
            "name": "Instagram",
            "category": "Text"
        }
    ]
}

{% endschema %}