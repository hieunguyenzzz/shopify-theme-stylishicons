{% capture cssvariable %}
    --section-bg:{{section.settings.bgColor}}
{% endcapture %}
{% capture items %}
    {% for i in (1..6) %}
        <div class="keen-slider__slide tw-bg-gray-100 tw-relative tw-h-72 tw-flex tw-justify-center tw-items-center"></div>
    {% endfor %}
{% endcapture %}
{% if section.blocks.size > 0 %}
    {% capture items %}
        {% for block in section.blocks %}
            <a href="{{block.settings.url}}" class="keen-slider__slide">
                {% render '[image]' cover: true image_box_ratio:'100%'  image: block.settings.image  data_widths: '[180, 360, 540, 720, 900]' %}
            </a>
        {% endfor %}
    {% endcapture %}
{% endif %}

<div style="{{cssvariable}}" id="{{section.id}}" class="tw-py-16 tw-bg-[color:var(--section-bg)] tw-items-center">
    <div class="tw-max-w-[980px] xl:tw-max-w-7xl tw-px-8 tw-mx-auto flex tw-flex-col tw-gap-8 lg:tw-grid-cols-2">
        <div class="flex tw-flex-col tw-items-center lg:tw-items-start tw-text-center lg:tw-text-left tw-flex-1 tw-space-y-8">
            <h2 class="tw-text-2xl tw-font-bold tw-mb-0">
                {{section.settings.heading}}
            </h2>
            <div class="tw-max-w-prose ">
                {{section.settings.description}}
            </div>
        </div>
        {% include '[carousel]' items:items %}
    </div>
</div>
<script>
    fetch('https://shopify-instagram-mobelaris.hieunguyen.dev/api/instagram').then(res=>res.json()).then(result=>{
        console.log({result})
        console.log({feed1:result.result.data.user.edge_owner_to_timeline_media.edges[1].node.display_url})
        console.log(document.querySelector('.keen-slider-{{section.id}}'))
        document.querySelector('.keen-slider-{{section.id}}').innerHTML=''
        const itemsFragments = document.createDocumentFragment()
        let str = ''
        result.result.data.user.edge_owner_to_timeline_media.edges.forEach(({node})=>{
            str=str+`<a target="_blank" href="https://www.instagram.com/p/${node.shortcode}/" class="keen-slider__slide">
                <img src="${node.display_url}"/>
            </a>`
        })
        document.querySelector('.keen-slider-{{section.id}}').innerHTML=str
    })
</script>
{% schema %}

{
    "name": "Instagram",
    "settings": [
        {
            "type": "color",
            "id": "bgColor",
            "label": "Background Color",
            "default": "#ffffff"
        }, {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        }, {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Shop Instagram"
        }, {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Less than humble about your abode? Mention @interior_icons in your photos and we'll feature the best pics on our site.</p>"
                    }
                ],
                "blocks": [
                    {
                        "type": "item",
                        "name": "Feed Item",
                        "settings": [
                            {
                                "type": "image_picker",
                                "id": "image",
                                "label": "Image"
                            }, {
                                "type": "url",
                                "id": "url",
                                "label": "Url",
                                "default": "/"
                            }
                        ]
                    }
                ],
                "presets": [
                    {
                        "name": "Instagram",
                        "category": "Text"
                    }
                ]
            }

{% endschema %}