}
  .lifestyle__text.center.half {
    width: 50%;
    margin: 0 auto;
    padding: 70px 0;
}
  div#shopify-section-product-descriptions-section .desktop-12 {
    margin-top: 20px;
}
  h3 {
    text-transform: uppercase;
}
  .lifestyle__text1 {
    vertical-align: middle;
    display: block;
    padding: 10%;
}
  .product-info1.row.desktop-12 img {
    border: none;
    padding: 0;
    margin: 0;
}
  .desktop-12.inpiredby.row {
    padding-top: 50px;
}
  div#shopify-section-product-descriptions-section img {
    width: 100%;
    border: 1px solid #cccccc6b;
    padding: 30px;
    margin-bottom: 30px;
    max-height: 530px;
    width: auto;
    margin: 0 auto !important;
    text-align: center;
    align-items: center;
    display: table;
}
